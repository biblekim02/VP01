<Window x:Class="_027_stackPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_027_stackPanel"
        mc:Ignorable="d"
        Title="Language Preferred" Height="350" Width="370">
    <StackPanel
        Margin="20"
        Orientation="Vertical">
        <TextBlock 
            HorizontalAlignment="Center"
            Margin="20"
            FontSize="15">
            좋아하는 프로그래밍 언어를 선택하세요.
        </TextBlock>
        <Separator Background="Gray"></Separator>
        <CheckBox x:Name ="cbC" Margin="30 5 0 0 ">C</CheckBox>
        <CheckBox x:Name ="cbCPP" Margin="30 5 0 0 ">C++</CheckBox>
        <CheckBox x:Name ="cbCS" Margin="30 5 0 0 ">C#</CheckBox>
        <CheckBox x:Name ="cbPython" Margin="30 5 0 0 ">Python</CheckBox>
        <CheckBox x:Name ="cbJava" Margin="30 5 0 0 ">Java</CheckBox>
        <Separator Background="Gray" Margin = "0 5 0 0"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name ="btnSubmit" Margin="20,18" Padding="15" Click="btnSubmit_Click">투표하기</Button>
            <Button x:Name ="btnExit" Margin="20,18" Padding="15" Click="btnExit_Click">결과보기</Button>
        </StackPanel>

    </StackPanel>
</Window>
